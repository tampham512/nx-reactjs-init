{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node","vite/client"],
    "baseUrl": ".",

    "paths": {
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@modules/*": ["src/modules/*"],
      "@mock/*": ["src/mock/*"],
      "@routes/*": ["src/routes/*"],
      "@atomic/*": ["src/atomic/*"],
    }
  },
  "include": ["src", "./svg.d.ts", "./.eslintrc.cjs","./env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
